<h3>Currently in Ingredient#new</h3>


<%= bootstrap_form_for :ingredient, url: {action: 'create'} do |f| %>
  <%= f.text_field :name %>
  <br>
  <%= f.select :category, @categories %>
  <br>
  <%= f.select :storage_type, @storage_types %>
  <br>
  <%= f.submit "Next" %>
<% end %>

<a href=<%= "/user/#{current_user.id}" %>><button type='button' class="btn btn-danger">Cancel</button></a>

